@model Expenses.BusinessLayer.Dtos.Inputs.ExpenseDtoIn

<hr />
<form asp-action="Create" asp-controller="Expenses">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="PeriodId" value="@ViewBag.PeriodId" type="hidden" />
        <div class="form-group col-md-3">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.ListCategories" onchange="loadLisSubcateries();" autofocus>
                <option value="">Seleccione</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div> 
        <div class="form-group col-md-3">
            <label asp-for="SubcategoryId" class="control-label"></label>
            <select asp-for="SubcategoryId" class="form-control" onclick="loadSubcategory();">
                <option value="">Seleccione</option>
            </select>
            <span asp-validation-for="SubcategoryId" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label class="control-label">&nbsp;</label>
            <div>
                <input type="submit" value="Agregar gasto" class="btn btn-danger btn-block" />
            </div>
        </div>
    </div>
</form>