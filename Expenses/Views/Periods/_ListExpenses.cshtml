@model IEnumerable<Expenses.Core.Dtos.ExpenseDto>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="row">
                        <div class="col-md-4">
                            @Html.DisplayFor(modelItem => item.Name)
                        </div>

                        <div class="col-md-4 text-info">
                            @Html.DisplayFor(modelItem => item.SubcategoryName)
                        </div>

                        <div class="col-md-4 text-info">
                            @Html.DisplayFor(modelItem => item.DateRegister)
                        </div>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Expenses" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-controller="Expenses" asp-route-id="@item.Id">Borrar</a>
                </td>
            </tr>
        }
        <tr>            
            <td>
            </td>
            <td>
                Total
            </td>
            <td>
                @Model.Sum(x=> x.Amount).ToString("C")
            </td>
            <td>
            </td>
        </tr>
    </tbody>
</table>
<hr />