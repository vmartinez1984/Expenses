@model Expenses.Models.Deposit

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-success">Agregar</h1>

<h4 class="text-success">Ahorro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubcategoryId" class="control-label"></label>
                <select asp-for="SubcategoryId" class="form-control" asp-items="ViewBag.SubcategoryId" autofocus>
                    <option value="">Seleccione</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DepositPlanId" class="control-label"></label>
                <select asp-for="DepositPlanId" class="form-control" asp-items="ViewBag.DepositPlanId">
                    <option value="">Seleccione</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
