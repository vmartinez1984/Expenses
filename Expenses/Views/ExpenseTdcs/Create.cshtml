@model Expenses.BusinessLayer.Dtos.Inputs.ExpenseTdcDtoIn

@{
    ViewData["Title"] = "Gasto Tdc";
}

<h1 class="text-info">Agregar</h1>

<h4>Gasto TDC</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthsWithoutInterest" class="control-label"></label>
                <input asp-for="MonthsWithoutInterest" class="form-control" />
                <span asp-validation-for="MonthsWithoutInterest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateRegistration" class="control-label"></label>
                <input asp-for="DateRegistration" class="form-control" />
                <span asp-validation-for="DateRegistration" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
