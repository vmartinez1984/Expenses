@model Expenses.Models.MontsWithoutInterestDetails

@{
    ViewData["Title"] = "Pago de meses sin intereses";
}

<h1 class="text-info">Agregar</h1>

<h4 class="text-info">Pago a meses sin intereses</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseNumber" class="control-label"></label>
                <input asp-for="ExpenseNumber" class="form-control" />
                <span asp-validation-for="ExpenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontsWithoutInterestId" class="control-label"></label>
                <select asp-for="MontsWithoutInterestId" class="form-control" asp-items="ViewBag.MontsWithoutInterestId">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="MontsWithoutInterestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStart" class="control-label"></label>
                <input asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
